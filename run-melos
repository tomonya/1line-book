.sd[data-s-5c9e33fe-a5d3-4870-92f8-135fc886e54e] { font-family: var(--s-font-9086f467); font-feature-settings: normal; font-size: 28px; height: auto; letter-spacing: 0.3em; margin: 50px; text-align: left; text-orientation: upright; -webkit-text-orientation: upright; writing-mode: vertical-rl; -ms-writing-mode: vertical-rl; -webkit-writing-mode: vertical-rl; max-width: calc(100% - 100px); justify-content: flex-start; }
}.sd[data-s-a54fb72d-1f39-4c3c-a44c-2f8ffdbbfefa] { color: #333; font-family: var(--s-font-9086f467); font-size: 24px; font-weight: 400; height: auto; letter-spacing: 0.3em; line-height: 1.4; margin: 100px; text-align: center; text-orientation: upright; -webkit-text-orientation: upright; width: auto; writing-mode: vertical-rl; -ms-writing-mode: vertical-rl; -webkit-writing-mode: vertical-rl; max-width: calc(100% - 200px); justify-content: center; }
@media screen and (max-width: 768px){
.sd[data-s-a54fb72d-1f39-4c3c-a44c-2f8ffdbbfefa] { font-family: var(--s-font-9086f467); text-align: left; justify-content: flex-start; }
}
@media screen and (max-width: 480px){
.sd[data-s-a54fb72d-1f39-4c3c-a44c-2f8ffdbbfefa] { font-family: var(--s-font-9086f467); font-feature-settings: normal; font-size: 24px; letter-spacing: 0.3em; margin: 50px; text-align: left; text-orientation: upright; -webkit-text-orientation: upright; writing-mode: vertical-rl; -ms-writing-mode: vertical-rl; -webkit-writing-mode: vertical-rl; max-width: calc(100% - 100px); justify-content: flex-start; }
}.sd[data-s-ea70c9e6-9010-4d7d-9103-9abb41de6cfe] { color: #333; flex: none; font-family: var(--s-font-9086f467); font-size: 20px; font-weight: 400; height: auto; letter-spacing: 0.2em; line-height: 1.4; margin: 100px; text-align: left; width: auto; writing-mode: vertical-rl; -ms-writing-mode: vertical-rl; -webkit-writing-mode: vertical-rl; max-width: calc(100% - 200px); justify-content: flex-start; }
@media screen and (max-width: 768px){
